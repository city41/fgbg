{
  "compilerOptions": {
    "noEmit": true,
    "jsx": "react",
    "lib": ["dom", "es2015"],
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "rootDir": "src",
    "jsx": "react"
  },
  "include": ["src", "typings"],
  "exclude": ["**/__tests__/**/*", "**/__stories__/**/*"]
}
